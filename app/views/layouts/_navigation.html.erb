<%= link_to "Gordi", root_path, :class => 'brand' %>

<div class="nav-collapse collapse">
  <ul class="nav">
    <li><%= link_to "New experiment", root_path %></li>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">Experiment data <b class="caret"></b></a>
      <ul class="dropdown-menu">
        <li class="nav-header">Parameters</li>
        <li>
          <form class="span3" id="sim_form">
            <fieldset>
              <label for="hlp">Hidden layers parameters</label>
              <input type="text" id="hlp" placeholder="[3, 4, 5]">
              <label for="lr">Learning rate</label>
              <input type="number" id="lr" placeholder="0.3" min="0" max="1" step="0.1" value="0.3">
              <label for="m">Momentum</label>
              <input type="number" id="m" placeholder="0.2" min="0" max="1" step="0.1" value="0.2">
              <label for="db">Disable bias</label>
              <select id="db">
                <option>false</option>
                <option>true</option>
              </select>
              <br>
              <button type="submit" class="btn btn-primary">Go</button>
            </fieldset>
          </form>
        </li>
      </ul>
    </li>
  </ul>
</div>
