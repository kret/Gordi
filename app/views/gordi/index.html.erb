<div class="tabbable">
	<ul class="nav nav-tabs" id="tabs">
		<li class="active"><a href="#tabParams" data-toggle="tab">Experiment parameters</a></li>
		<li><a href="#tabPanel" data-toggle="tab">Experiment panel</a></li>
	</ul>
	<div class="tab-content">

		<div class="tab-pane active" id="tabParams">
			<form id="sim_form">
				<fieldset>
					<label for="hlp">Hidden layers parameters</label>
					<input type="text" id="hlp" placeholder="[3, 4, 5]" value="[3]">
					<label for="lr">Learning rate</label>
					<input type="number" id="lr" placeholder="0.3" min="0" max="1" step="0.1" value="0.3">
					<label for="m">Momentum</label>
					<input type="number" id="m" placeholder="0.2" min="0" max="1" step="0.1" value="0.2">
					<label for="db">Disable bias</label>
					<select id="db">
						<option>false</option>
						<option>true</option>
					</select>
					<br>
					<button type="submit" class="btn btn-primary">Go</button>
					Training set selection
					<div id="training_set"></div>
				</fieldset>
			</form>
		</div>

		<div class="tab-pane" id="tabPanel">
			Network state
			<div></div>
			Controls
		</div>
	</div>
</div>

<%#
<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="100%" height="100%" onload="startup()" onmousemove="moveIt(evt)">
	<script><![CDATA[
		function startup(){C=document.getElementById("C")}

		function moveIt(evt){
			C.setAttributeNS(null,"cx",evt.clientX)
			C.setAttributeNS(null,"cy",evt.clientY)
		}
	]]></script>

	<circle cx="60" cy="60" r="40" fill="white" stroke="black" stroke-width="3"/>
	<circle id="C" cx="60" cy="60" r="22" fill="darkgrey" opacity="0.7" stroke="lightgrey" stroke-width="8"/>
</svg>

<svg>
	<script><![CDATA[
		function changeFill(){
			D=document.getElementById("D")
			D.setAttributeNS(null,"fill","black")
		}
	]]></script>

	<circle id="D" cx="80" cy="100" r="22" fill="grey" onclick="changeFill()"/>
</svg>
%>
